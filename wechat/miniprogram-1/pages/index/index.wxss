/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.input-section {
  width: 100%;
  margin-bottom: 20px;
}

.number-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.date-section {
  width: 100%;
  margin-bottom: 20px;
}

.date-picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}

/* 移除不需要的样式 */
.calendar,
.calendar-header,
.calendar-board,
.swiper,
.swiper-item,
.bg-red,
.bg-blue,
.bg-green {
  display: none;
}

.calendar-container {
  width: 100%;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 20rpx;
  margin-top: 20rpx;
}

.calendar-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.weekday {
  font-size: 28rpx;
  color: #666;
}

.calendar-body {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
  padding: 20rpx 0;
}

.day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 6rpx;
  font-size: 28rpx;
  position: relative;
  border-radius: 8rpx;
}

.day-number {
  margin-bottom: 10rpx;
}

.time-slots {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  margin-top: 4rpx;
}

.time-slot {
  width: 90%;
  height: 10rpx;
  border-radius: 4rpx;
  margin: 0 auto;
}

/* 状态颜色 */
.available {
  background-color: #4CAF50;  /* 绿色表示可用 */
}

.busy {
  background-color: #FFC107;  /* 黄色表示忙碌 */
}

.off {
  background-color: #FF4444;  /* 红色表示未计划消费 */
}

.today {
  background: #e6f3ff;
}

.today .day-number {
  color: #0066cc;
  font-weight: bold;
}

.disabled {
  opacity: 0.3;
}

.day-info {
  font-size: 20rpx;
  color: #ff6b6b;
  margin-top: 4rpx;
}

/* 在现有样式中添加 past 状态的样式 */
.past {
  background-color: #E0E0E0;  /* 灰色表示过去的日期 */
}

/* 修改 disabled 样式 */
.disabled {
  opacity: 0.3;
}

/* 过去日期的数字颜色也变灰 */
.day.isPast .day-number {
  color: #999;
}

.month-header {
  padding: 20rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.month-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 添加新的样式 */
.plan-info {
  width: 100%;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.plan-header {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}

.plan-detail {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  font-size: 28rpx;
  color: #666;
}

/* 修改状态颜色 */
.meal11 {
  background-color: #98FB98;  /* 浅绿色表示11元餐 */
}

.meal15 {
  background-color: #228B22;  /* 深绿色表示15元餐 */
}

/* 修改节假日样式 */
.holiday {
  background-color: #FFA500;  /* 橙色表示节假日 */
}
